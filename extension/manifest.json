{
  "manifest_version": 2,
  "name": "Pokeclicker Super Sync!",
  "version": "1.0",
  "description": "Sync Pokeclicker progress between multiple players.",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.pokeclicker.com/*"],
      "js": ["scripts/sync.js"]
    }
  ],
  "permissions": [
    "*://*.pokeclicker.com/*",
    "*://localhost/*",
    "webRequest"
  ]
}